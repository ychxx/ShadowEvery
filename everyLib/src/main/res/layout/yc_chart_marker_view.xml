<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_chart_marker"
    android:minWidth="@dimen/margin_60dp"
    android:orientation="vertical"
    android:paddingLeft="@dimen/margin_4dp"
    android:paddingTop="@dimen/margin_4dp"
    android:paddingRight="@dimen/margin_4dp"
    android:paddingBottom="@dimen/margin_4dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/chartMakerItem1Tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:fontFamily="@font/din_font"
            android:text="-"
            android:textColor="@color/chart_value_text_color"
            android:textSize="@dimen/text_size_11" />

        <TextView
            android:id="@+id/chartMakerItem2Tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:fontFamily="@font/din_font"
            android:text="-"
            android:textColor="@color/chart_value_text_color"
            android:textSize="@dimen/text_size_11" />

        <TextView
            android:id="@+id/chartMakerItem3Tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:fontFamily="@font/din_font"
            android:text="-"
            android:textColor="@color/chart_value_text_color"
            android:textSize="@dimen/text_size_11" />
    </LinearLayout>
</LinearLayout>
